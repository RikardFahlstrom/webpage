<div metal:use-macro="view.layout">
    <div metal:fill-slot="main_content">

          <!-- Header -->
   <header class="masthead text-white text-center">

       <div class="container">
        <div class="row">

            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Python scripts!</h1>
            </div>

            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form id="newsletter" action="/newsletter/add_subscriber" method="POST">
                    <input class="form-control"
                           type="email"
                           name="email"
                           required
                           placeholder=" Sign up for email updates!"/>
                    <button type="submit" class="form-control btn btn-success">Get notified</button>
                </form>
            </div>
        </div>

       </div>
   </header>
    <!-- /.intro-header -->


    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
      <div class="container">
        <div class="row">

            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fas fa-laptop m-auto text-primary"></i>
                    </div>
                    <h3>Fully Responsive</h3>
                    <p class="lead mb-0">This theme will look great on any device, no matter the size!</p>
                </div>
          </div>

            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fas fa-th-large m-auto text-primary"></i>
                    </div>
                    <h3>Bootstrap 4 Ready</h3>
                    <p class="lead mb-0">Featuring the latest build of the new Bootstrap 4 framework!</p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                    <i class="far fa-check-circle m-auto text-primary"></i>
                </div>
                <h3>Easy to Use</h3>
                <p class="lead mb-0">Ready to use with your own content, or customize the source files!</p>
                </div>
            </div>

        </div>
      </div>
    </section>

